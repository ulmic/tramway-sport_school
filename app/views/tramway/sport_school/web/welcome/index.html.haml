= content_for :head_content do
  = stylesheet_link_tag    'tramway/sport_school/application', media: 'all'
  = javascript_include_tag 'tramway/sport_school/application'

= content_for :application_name do
  = @institution.title || t('application.name')

= content_for :application_tagline do
  = @institution.tagline || t('application.tagline')

= content_for :navbar do
  - [ :parents, :schoolkids, :adults, :contacts ].each do |block|
    = menu_item t("blocks.navbar_links.#{block}"), "##{block}"
